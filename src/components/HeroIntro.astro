---
import '../styles/vars.css';

export interface Props {
	title: string;
  subtitle: string;
	description: string;
}
const { title, subtitle, description } = Astro.props;
---

<section>
  <h1>{title}</h1>
  <h2>{subtitle}</h2>
  <p>{description}</p>
</section>

<style>
	section {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    margin: 4% auto;
  }

  h1, h2 {
    font-family: var(--title-font);
    letter-spacing: 4px;
  }

  h1 {
    color: var(--primary);
    font-size: 5rem;
    margin-top: 7%;
    margin-bottom: 0;
  }

  h2 {
    color: var(--secondary);
    font-size: 4rem;
    margin-top: 2%;
    margin-bottom: 5%;
  }

  p {
    color: var(--black);
    font-family: var(--body-font);
    letter-spacing: 0.5px;
    font-size: 1.2rem;
  }
</style>
