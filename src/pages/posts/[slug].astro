---
import { contentfulClient } from "../../lib/contentful";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import Navigation from "../../components/Navigation.astro";

import type { TypePostFields } from "../../lib/contentful";

export async function getStaticPaths() {
  const entries = await contentfulClient.getEntries<TypePostFields>({
    content_type: "post",
  });

  const pages = entries.items.map((item) => ({
    params: { slug: item.fields.slug },
    props: {
      title: item.fields.title,
      body: documentToHtmlString(item.fields.body),
      topics: item.fields.topics,
    },
  }));
  return pages;
}

const { title, body, topics } = Astro.props;
---

<html lang="en">
  <head>
    <title>{title}</title>
  </head>
  <body>
    <Navigation />
    <h1>{title}</h1>
    <article set:html={body} />
  </body>
</html>
